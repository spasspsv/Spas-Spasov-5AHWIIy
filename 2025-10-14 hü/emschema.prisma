datasource db {
    provider = "sqlite"
    url      = "file:./dev.sqlite3"
}

generator client {
    provider = "prisma-client-js"
}

model Player {
    id              String   @id @default(cuid())
    vorname         String   @unique
    nachname        String?
    rueckennummer   String?

    Mannschaft      Mannschaft[] @relation("PlayerMannschaft")
}

model Mannschaft {
    id        String   @id @default(cuid())
    name      String   @unique

    players   Player[]  @relation("PlayerMannschaft")
    matchesAsA Match[]  @relation("MatchTeamA")
    matchesAsB Match[]  @relation("MatchTeamB")
}

model Match {
    id        String     @id @default(cuid())
    teamAId   String
    teamBId   String
    teamA     Mannschaft @relation("MatchTeamA", fields: [teamAId], references: [id])
    teamB     Mannschaft @relation("MatchTeamB", fields: [teamBId], references: [id])
    datum     DateTime
    toreA     Int
    toreB     Int
    stadt     String

    stadionId String
    stadion   Stadion    @relation(fields: [stadionId], references: [id])
}

model Stadion {
    id      String   @id @default(cuid())
    name    String
    stadt   String

    matches Match[]
}